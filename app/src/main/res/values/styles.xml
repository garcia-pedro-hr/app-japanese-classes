<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="android:colorControlHighlight">@color/primary_blue</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Msjc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="TextAppearance.Msjc.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Msjc.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/backdrop_background_color</item>
        <item name="android:theme">@style/Theme.Msjc</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Msjc.Toolbar</item>
    </style>

    <style name="Widget.Msjc.Backdrop.Background" parent="">
        <item name="android:background">@color/backdrop_background_color</item>
    </style>

    <style name="Widget.Msjc.Backdrop.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_black</item>
    </style>

    <style name="Widget.Msjc.ModuleItem.Overline" parent="">
        <item name="android:textColor">@color/subtitle_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.Msjc.ModuleItem.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/title_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Msjc.ModuleItem.Subtitle" parent="">
        <item name="android:textColor">@color/subtitle_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Msjc.LessonItem.Number" parent="">
        <item name="android:background">@drawable/number_background_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Msjc.LessonItem.Number.Incomplete" parent="Widget.Msjc.LessonItem.Number">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_blue_100</item>
    </style>

    <style name="Widget.Msjc.LessonItem.Number.Complete" parent="Widget.Msjc.LessonItem.Number">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_blue</item>
    </style>


</resources>
