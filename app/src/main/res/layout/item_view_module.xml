<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SelectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/module_number"
        style="@style/Widget.Msjc.ModuleItem.Overline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/module_portuguese_title"
        style="@style/Widget.Msjc.ModuleItem.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/module_number"/>

    <TextView
        android:id="@+id/module_japanese_title"
        style="@style/Widget.Msjc.ModuleItem.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/module_portuguese_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
